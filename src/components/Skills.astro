---
import skillsData from "../data/Skills.json";

// ランダムな色を取得する関数
const getRandomColor = () => {
  const colors = [
    "bg-blue-500",
    "bg-green-500",
    "bg-indigo-500",
    "bg-teal-500",
    "bg-pink-500",
    "bg-yellow-500",
    "bg-purple-500",
    "bg-red-500",
    "bg-orange-500"
  ];
  return colors[Math.floor(Math.random() * colors.length)];
};
---

<div class="mt-16" id="skills">
  <h2 class="text-2xl font-semibold text-gray-900 text-center mb-8">Hard Skills</h2>

  {skillsData.map(skill => (
    <div class="mb-6">
      <p class="text-gray-700 font-semibold">{skill.name}</p>
      <div class="w-full bg-gray-200 rounded-full h-2.5 mt-2">
        <div class={`h-2.5 rounded-full ${getRandomColor()}`} style={`width: ${skill.level}%`}></div>
      </div>
    </div>
  ))}
</div>