---
import Header from '../components/Header.astro';
import Head from '../components/Head.astro';
import reviews from '../data/review.json';
---

<html lang="ja">
  <Head title="Reviews" />
  <style>
    .tag {
      display: inline-block;
      background-color: #4F46E5;
      color: white;
      font-size: 0.875rem;
      font-weight: 500;
      padding: 4px 8px;
      border-radius: 9999px;
      transition: background-color 0.2s;
    }
    
    .tag:hover {
      background-color: #3730A3;
    }
  </style>
  <body>
    <Header/>
    <main class="py-16">
      <section class="max-w-4xl mx-auto px-4">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-semibold text-gray-900">Reviews</h1>
          <p class="text-lg text-gray-600 mt-2">週・月・年ごとでのレビューを掲載しています</p>
        </div>

        <div class="space-y-8">
          {reviews.map((review) => (
            <div class="border border-gray-300 rounded-lg p-6 shadow-sm">
                <a href={`https://scrapbox.io/kenlog/${review.link}`} target="_blank" rel="noopener noreferrer">
                    <h2 class="text-2xl font-semibold text-gray-900">{review.title}</h2>
                    <p class="text-gray-500 text-sm">{review.comment}</p>
                    <div class="mt-2 flex flex-wrap gap-2">
                      {review.tags.map((tag) => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                </a>                
            </div>
          ))}
        </div>
      </section>
    </main>
  </body>
</html>
